{
  "name": "atlas-directive",
  "version": "1.0.0",
  "description": "The ATLAS Directive - Interactive Narrative Discovery Platform for 3I/ATLAS",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run type-check && npm run narrative:validate",
    "build": "next build",
    "start": "next start",
