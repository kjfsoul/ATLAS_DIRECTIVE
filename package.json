{
  "name": "@kjfsoul/atlas-directive",
  "version": "1.0.0",
  "description": "The ATLAS Directive - Interactive Narrative Discovery Platform for 3I/ATLAS",
  "private": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "src"
  ],
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run type-check && npm run narrative:validate",
    "build": "tsup",
    "start": "next start",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --max-warnings=0",
    "type-check": "tsc --noEmit",
    "narrative:validate": "node scripts/validate-narrative.mjs",
    "narrative:validate:multi": "node scripts/validate-narrative.mjs --multi-chunk",
    "narrative:stats": "node scripts/narrative-stats.mjs",
    "test": "vitest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:watch": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "npm run build",
    "lock:check": "node ./scripts/checkNarrativeEditLock.js",
    "lock:acquire": "node ./scripts/acquireNarrativeLock.js",
    "lock:release": "node ./scripts/releaseNarrativeLock.js",
    "narrative:merge": "node ./scripts/mergeNarratives.js",
    "c123:manage": "node ./scripts/c123-manager.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjfsoul/atlas-directive.git"
  },
  "keywords": [
    "atlas",
    "atlas-directive",
    "game",
    "ui"
  ],
  "dependencies": {
    "@types/three": "^0.168.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "rehype-sanitize": "^6.0.0",
    "three": "^0.168.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "glob": "^10.3.10",
    "jest": "^29.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
